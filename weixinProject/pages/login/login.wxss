/* login.wxss */

.login-container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.logo-container {
  text-align: center;
  margin-bottom: 40rpx;
  padding-top: 40rpx;
}

.logo {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.mode-switch {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.switch-item {
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  color: #666;
  position: relative;
}

.switch-item.active {
  color: #007aff;
  font-weight: bold;
}

.switch-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #007aff;
  border-radius: 2rpx;
}

.form {
  background-color: white;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.input-container {
  position: relative;
  margin-bottom: 20rpx;
}

.input {
  width: 100%;
  height: 90rpx;
  padding: 0 20rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #f9f9f9;
}

.password-container {
  position: relative;
}

.password-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 40rpx;
  color: #999;
  z-index: 2;
}

.remember-container {
  display: flex;
  align-items: center;
  margin: 20rpx 0 30rpx;
}

.remember-text {
  font-size: 26rpx;
  color: #666;
  margin-left: 10rpx;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #007aff;
  color: white;
  border-radius: 45rpx;
  font-size: 32rpx;
  margin-top: 20rpx;
}

.wechat-login {
  margin-top: 30rpx;
  text-align: center;
}

.wechat-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #1aad19;
  color: white;
  border-radius: 45rpx;
  font-size: 32rpx;
}
