/* Swiper */
swiper {
  margin-bottom: 20rpx;
}

/* 菜单部分 */
.menu {
  display: flex;
  justify-content: space-between;
  padding: 16rpx;
  flex-wrap: wrap;
  border-radius: 10rpx;
  background: linear-gradient(to right, #c2e9fb, #a1c4fd); /* 增加渐变色背景 */
  box-shadow: 0 4rpx 6rpx rgba(0, 0, 0, 0.1);
}

.item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 170rpx;
  height: 200rpx;
  border: 1rpx solid #c2e9fb;
  margin: 8rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 6rpx rgba(0, 0, 0, 0.1); /* 增加阴影效果 */
  transition: all 0.3s ease-in-out;
}

.item:hover {
  transform: scale(1.05); /* 增加悬浮效果 */
  background-color: #f0f8ff;
}

.img {
  width: 88rpx;
  height: 88rpx;
  border-radius: 1rpx;
}

.title {
  font-size: 30rpx;
  color: #333;
  margin-top: 10rpx;
}

/* 通知部分 */
.notice {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding: 16rpx;
  background-color: #f7fbff;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 6rpx rgba(0, 0, 0, 0.1);
}

.notice-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.notice-list {
  display: flex;
  flex-direction: column;
}

.notice-item {
  font-size: 28rpx;
  color: #555;
  margin: 5rpx 0;
  padding-left: 10rpx;
  border-left: 4rpx solid #a1c4fd;
}
