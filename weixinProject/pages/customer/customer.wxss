/* pages/customer/customer.wxss */
.container {
  padding: 20rpx;
}

.inquiry-section, .ticket-section, .faq-section {
  margin-bottom: 40rpx;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.inquiry-section text, .ticket-section text, .faq-section text {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.inquiry-section input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.ticket-section .picker {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  line-height: 80rpx;
  box-sizing: border-box;
}

.ticket-section textarea {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

button {
  width: 100%;
  height: 80rpx;
  background-color: #007aff;
  color: white;
  border-radius: 8rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

button[disabled] {
  background-color: #cccccc;
  color: #666666;
}

.secondary-button {
  background-color: #f8f8f8;
  color: #007aff;
  border: 1rpx solid #007aff;
}

.faq-item {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.question {
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.answer {
  color: #666;
  font-size: 28rpx;
}

.loading, .empty-tip {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
}
