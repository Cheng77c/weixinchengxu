.container {
  padding: 20px;
}

.search-box {
  margin-bottom: 20px;
}

.upload-section {
  margin-bottom: 30px;
}

.categories {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
}

.category {
  padding: 5px 10px;
  background-color: #f5f5f5;
  border-radius: 4px;
}

.file-list {
  margin-bottom: 20px;
}

.file-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
}

button {
  background-color: #007bff;
  color: white;
  border: none;
  padding: 5px 10px;
  border-radius: 4px;
}
