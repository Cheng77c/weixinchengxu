/* pages/ticketList/ticketList.wxss */
.container {
  padding: 20rpx;
}

.filter-bar {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  overflow-x: scroll;
  white-space: nowrap;
}

.filter-item {
  display: inline-block;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: #666;
  border-bottom: 4rpx solid transparent;
}

.filter-item.active {
  color: #007aff;
  border-bottom-color: #007aff;
}

.ticket-list {
  margin-bottom: 20rpx;
}

.ticket-item {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.ticket-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.ticket-type {
  font-weight: bold;
  font-size: 30rpx;
}

.ticket-status {
  font-size: 26rpx;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
}

.ticket-status.pending {
  background-color: #ffecb3;
  color: #ff9800;
}

.ticket-status.processing {
  background-color: #e3f2fd;
  color: #2196f3;
}

.ticket-status.resolved {
  background-color: #e8f5e9;
  color: #4caf50;
}

.ticket-status.closed {
  background-color: #f5f5f5;
  color: #9e9e9e;
}

.ticket-content {
  margin: 20rpx 0;
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.ticket-footer {
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  color: #999;
}

.ticket-time, .ticket-resolved-time {
  margin-bottom: 6rpx;
}

.loading, .empty-tip, .loading-more, .no-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
} 