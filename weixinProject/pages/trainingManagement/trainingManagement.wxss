/* pages/trainingManagement/trainingManagement.wxss */
.container {
  padding: 20px;
  background-color: #f4f4f4;
}

.title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 10px;
}

.course-list {
  margin-bottom: 20px;
}

.course-item {
  background-color: #fff;
  padding: 15px;
  margin-bottom: 10px;
  border-radius: 8px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.course-name {
  font-size: 18px;
  font-weight: bold;
}

.course-type {
  font-size: 14px;
  color: #888;
}

.course-desc {
  font-size: 12px;
  color: #666;
}

.apply-button {
  background-color: #007aff;
  color: white;
  padding: 8px 16px;
  margin-top: 10px;
  border-radius: 5px;
}

.status-section {
  margin-top: 20px;
  background-color: #fff;
  padding: 10px;
  border-radius: 8px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.action-buttons button {
  background-color: #007aff;
  color: white;
  padding: 10px;
  margin-top: 10px;
  border-radius: 5px;
}
