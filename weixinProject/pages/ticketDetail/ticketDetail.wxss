/* pages/ticketDetail/ticketDetail.wxss */
.container {
  padding: 20rpx;
}

.header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  position: relative;
}

.back-button {
  position: absolute;
  left: 0;
  font-size: 28rpx;
  color: #007aff;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
}

.ticket-card {
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.ticket-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.ticket-type {
  font-weight: bold;
  font-size: 34rpx;
}

.ticket-status {
  font-size: 26rpx;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
}

.ticket-status.pending {
  background-color: #ffecb3;
  color: #ff9800;
}

.ticket-status.processing {
  background-color: #e3f2fd;
  color: #2196f3;
}

.ticket-status.resolved {
  background-color: #e8f5e9;
  color: #4caf50;
}

.ticket-status.closed {
  background-color: #f5f5f5;
  color: #9e9e9e;
}

.section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.section-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  word-break: break-all;
}

.ticket-info {
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.info-item {
  display: flex;
  margin-bottom: 10rpx;
}

.label {
  font-size: 26rpx;
  color: #999;
  width: 160rpx;
}

.value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.priority {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.priority.low {
  background-color: #e8f5e9;
  color: #4caf50;
}

.priority.medium {
  background-color: #fff8e1;
  color: #ffc107;
}

.priority.high {
  background-color: #ffebee;
  color: #f44336;
}

.loading, .empty-tip {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
} 