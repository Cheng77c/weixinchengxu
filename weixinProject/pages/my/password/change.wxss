/* pages/password/change.wxss */
.container {
  padding: 30rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

.form-container {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  color: #333333;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.tips-container {
  background-color: #f8f8f8;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.tips-text {
  display: block;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

.tips-item {
  display: block;
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

.button-container {
  padding: 20rpx 0;
}

.submit-button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #1aad19;
  color: white;
  font-size: 32rpx;
  border-radius: 16rpx;
  text-align: center;
} 