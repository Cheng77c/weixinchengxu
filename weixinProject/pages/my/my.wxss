/* pages/my/my.wxss */
.container {
  min-height: 100vh;
  background-color: #f7f7f7;
  position: relative;
  padding-bottom: 30rpx;
}

/* 顶部背景 */
.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 220rpx;
  background: linear-gradient(to right, #1aad19, #39b54a);
  z-index: 0;
}

/* 用户信息卡片 */
.user-card {
  position: relative;
  margin: 0 30rpx;
  margin-top: 40rpx;
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 1;
}

.avatar-container {
  margin-bottom: 20rpx;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  border: 4rpx solid #ffffff;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.account {
  font-size: 28rpx;
  color: #888888;
}

.btn-login {
  margin-top: 20rpx;
  width: 240rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #ffffff;
  background-color: #1aad19;
  border-radius: 35rpx;
}

/* 菜单样式 */
.menu-container {
  margin: 30rpx;
}

.menu-group {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  padding: 0 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.menu-title {
  padding: 30rpx 20rpx 20rpx;
  font-size: 30rpx;
  color: #666666;
  font-weight: bold;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.menu-text {
  font-size: 30rpx;
  color: #333333;
}

.arrow-icon {
  font-size: 30rpx;
  color: #cccccc;
}

/* 退出登录按钮 */
.logout-container {
  margin: 30rpx;
}

.btn-logout {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #ffffff;
  color: #ff4d4f;
  font-size: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

/* 版本信息 */
.version-info {
  text-align: center;
  margin-top: 40rpx;
  font-size: 24rpx;
  color: #999999;
}
