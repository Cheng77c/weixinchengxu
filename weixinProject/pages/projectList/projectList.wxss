/* projectList.wxss */
.container {
  padding: 20rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.filter {
  font-size: 28rpx;
  color: #666;
}

.picker {
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.project-list {
  margin-bottom: 100rpx;
}

.project-item {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.project-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.project-name {
  font-size: 32rpx;
  font-weight: bold;
}

.project-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  color: #fff;
}

.pending {
  background-color: #faad14;
}

.approved {
  background-color: #52c41a;
}

.rejected {
  background-color: #f5222d;
}

.in_progress {
  background-color: #1890ff;
}

.completed {
  background-color: #13c2c2;
}

.project-info {
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  color: #666;
  margin: 10rpx 0;
}

.leader {
  margin-bottom: 6rpx;
}

.project-progress {
  margin-top: 10rpx;
  font-size: 26rpx;
}

.empty-tip {
  text-align: center;
  color: #999;
  margin-top: 100rpx;
}

.add-button {
  position: fixed;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: #07c160;
  color: #fff;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.3);
}

.add-button .iconfont {
  margin-right: 10rpx;
} 